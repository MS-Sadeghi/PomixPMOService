@using PomixPMOService.UI.Controllers;
@model PomixPMOService.UI.Controllers.PaginatedCartableViewModel
@{
    ViewData["Title"] = "کارتابل";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formModel = ViewBag.FormModel as PomixPMOService.UI.Controllers.CartableFormViewModel ?? new PomixPMOService.UI.Controllers.CartableFormViewModel();
    var verifyDocData = ViewBag.VerifyDocData as dynamic ?? null;
    var showDocumentTab = ViewBag.ShowDocumentTab as bool? ?? false;
    var documentError = ViewBag.DocumentError as string ?? null;
}

<div class="input-group mb-5">
    <form asp-action="Index" method="get" class="w-100">
        <div class="input-group">
            <input type="text" class="form-control" name="search" value="@Model.SearchQuery" placeholder="جستجو">
            <button type="submit" class="input-group-text btn btn-primary">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </div>
    </form>
</div>
<div class="card">
    <div class="card-header">
        <h2 class="card-title">درخواست‌ها</h2>
        <button id="AddDoc" type="button" class="btn btn-primary btn-pill left-btn" data-bs-toggle="modal" data-bs-target="#scrollingmodal">سند جدید</button>
    </div>
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        <div class="table-responsive text-center">
            <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="cartableTable" class="table table-bordered text-nowrap border-bottom">
                            <thead>
                                <tr role="row">
                                    <th class="wd-10p border-bottom-0 sorting sorting_asc">شماره درخواست</th>
                                    <th class="wd-15p border-bottom-0 sorting">تاریخ ایجاد</th>
                                    <th class="wd-15p border-bottom-0 sorting">کد ملی</th>
                                    <th class="wd-15p border-bottom-0 sorting">شماره همراه</th>
                                    <th class="wd-15p border-bottom-0 sorting">شناسه سند</th>
                                    <th class="wd-10p border-bottom-0 sorting">رمز تصدیق</th>
                                    <th class="wd-10p border-bottom-0 sorting"> احراز هویت متقاضی </th>
                                    <th class="wd-10p border-bottom-0 sorting">احراز اصالت سند </th>
                                    <th class="wd-10p border-bottom-0 sorting">ارتباط متقاضی با سند </th>
                                    <th class="wd-10p border-bottom-0 sorting">احراز وکالت</th>
                                    <th class="wd-20p border-bottom-0 sorting">توضیحات</th>
                                    <th class="wd-20p border-bottom-0 sorting">تایید</th>
                                </tr>
                            </thead>
                            <tbody id="cartableBody">
                                @foreach (var item in Model.Items)
                                {
                                    var explanation = "";
                                    if (!item.IsMatch.HasValue || !item.IsMatch.Value)
                                    {
                                        explanation += "کد ملی و شماره موبایل تطابق ندارند. ";
                                    }
                                    if (!item.IsExist.HasValue || !item.IsExist.Value)
                                    {
                                        explanation += "سند وجود ندارد. ";
                                    }
                                    if (!item.IsNationalIdInResponse.HasValue || !item.IsNationalIdInResponse.Value)
                                    {
                                        explanation += "کد ملی در سند یافت نشد. ";
                                    }
                                    if (!item.IsNationalIdInLawyers.HasValue || !item.IsNationalIdInLawyers.Value)
                                    {
                                        explanation += "کد ملی در سند یافت نشد. ";
                                    }
                                    if (string.IsNullOrEmpty(explanation))
                                    {
                                        explanation = "بدون مشکل";
                                    }

                                    <tr>
                                        <td>@item.RequestId</td>
                                        <td>@item.CreatedAt.ToPersianDate()</td>
                                        <td>@item.NationalId</td>
                                        <td>@item.MobileNumber</td>
                                        <td>@item.DocumentNumber</td>
                                        <td>@item.VerificationCode</td>
                                        <!-- احراز هویت متقاضی -->
                                        <td class="text-center">
                                            @if (item.IsMatch.HasValue)
                                            {
                                                if (item.IsMatch.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- احراز اصالت سند -->
                                        <td class="text-center">
                                            @if (item.IsExist.HasValue)
                                            {
                                                if (item.IsExist.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="وجود دارد"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="وجود ندارد"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!--ارتباط متقاضی با سند  -->
                                        <td class="text-center">
                                            @if (item.IsNationalIdInResponse.HasValue)
                                            {
                                                if (item.IsNationalIdInResponse.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- اصالت وکالت -->
                                        <td class="text-center">
                                            @if (item.IsNationalIdInLawyers.HasValue)
                                            {
                                                if (item.IsNationalIdInLawyers.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- توضیحات -->
                                        <td>
                                            @if (!string.IsNullOrEmpty(explanation) && explanation != "بدون مشکل")
                                            {
                                                <button class="btn btn-sm btn-icon btn-light" data-bs-toggle="modal" data-bs-target="#explanationModal-@item.RequestId" title="مشاهده توضیحات">
                                                    <i class="fa fa-exclamation-circle text-danger"></i>
                                                </button>
                                                <!-- Modal for Explanation -->
                                                <div class="modal fade text-start" id="explanationModal-@item.RequestId" tabindex="-1" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">توضیحات درخواست @item.RequestId</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body p-0">
                                                                <div class="card">
                                                                    <div class="card-body">
                                                                        <div class="">
                                                                            <ul class="list-group">
                                                                                @{
                                                                                    var problems = explanation.Split(new[] { ". " }, StringSplitOptions.RemoveEmptyEntries);
                                                                                    foreach (var problem in problems)
                                                                                    {
                                                                                        var cleanProblem = problem.Trim().TrimEnd('.');
                                                                                        if (!string.IsNullOrEmpty(cleanProblem))
                                                                                        {
                                                                                            <li class="listunorder">@cleanProblem</li>
                                                                                        }
                                                                                    }
                                                                                }
                                                                            </ul>
                                                                            <div class="mt-3">
                                                                                <label for="description-@item.RequestId" class="form-label">توضیحات اضافی</label>
                                                                                <textarea class="form-control" id="description-@item.RequestId" rows="4" placeholder="توضیحات خود را اینجا وارد کنید..."></textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-primary" onclick="saveDescription('@item.RequestId')">ثبت</button>
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="بدون مشکل"></i>
                                            }
                                        </td>
                                        <!-- تایید -->
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center align-items-center gap-2">
                                                <div class="form-check">
                                                    <input class="form-check-input success-checkbox" type="radio" name="approval-@item.RequestId" id="approve-@item.RequestId" value="true">
                                                    <label class="form-check-label" for="approve-@item.RequestId">
                                                        <i class="fa fa-check text-success"></i>
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input danger-checkbox" type="radio" name="approval-@item.RequestId" id="reject-@item.RequestId" value="false">
                                                    <label class="form-check-label" for="reject-@item.RequestId">
                                                        <i class="fa fa-times text-danger"></i>
                                                    </label>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- صفحه‌بندی -->
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-left"></i>
                                <span class="sr-only">قبلی</span>
                            </a>
                        </li>
                        @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchQuery })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages || Model.TotalPages == 0 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-right"></i>
                                <span class="sr-only">بعدی</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding New Document -->
<div class="modal fade" id="scrollingmodal" tabindex="-1" aria-labelledby="scrollingmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header border-0 position-absolute top-0 end-0 p-3">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="card border-0">
                    <div class="card-body">
                        <div class="panel panel-primary">
                            <div class="tab-menu-heading">
                                <div class="tabs-menu1">
                                    <ul class="nav panel-tabs">
                                        <li><a href="#tab1" data-bs-toggle="tab" class="active">ایجاد سند جدید</a></li>
                                        <li><a href="#tab2" data-bs-toggle="tab">نمایش سند</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="panel-body tabs-menu-body">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab1">
                                        <form asp-action="ValidateSteps" method="post" class="form-horizontal" id="needs-validation-form">
                                            @Html.AntiForgeryToken()

                                            <!-- Step 1: احراز هویت -->
                                            <div class="form-row mb-4">
                                                <div class="form-group col-md-12 mb-0">
                                                    <label class="form-label">احراز هویت:</label>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-0">
                                                            <div class="form-group">
                                                                <input class="form-control" name="NationalCode" id="NationalCode" placeholder="کد ملی" required type="text">
                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-6 mb-0">
                                                            <div class="form-group">
                                                                <input class="form-control" name="MobileNumber" id="MobileNumber" placeholder="شماره موبایل" required type="text">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step1Message) || formModel.Step1Message.Contains("معتبر") ? "success" : "danger")">@formModel?.Step1Message</span>
                                                </div>
                                            </div>

                                            <!-- Step 2: احراز سند -->
                                            <div class="form-row mb-4">
                                                <div class="form-group col-md-12 mb-0">
                                                    <label class="form-label">احراز سند:</label>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-0">
                                                            <div class="form-group">
                                                                <input class="form-control" name="DocumentNumber" id="DocumentNumber" placeholder="شناسه سند" required type="text">
                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-6 mb-0">
                                                            <div class="form-group">
                                                                <input class="form-control" name="VerifyCode" id="VerifyCode" placeholder="رمز تصدیق" required type="text">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step2Message) || formModel.Step2Message.Contains("معتبر") ? "success" : "danger")">@formModel?.Step2Message</span>
                                                </div>
                                            </div>

                                            <!-- Buttons -->
                                            <div class="form-footer mt-2 text-end">
                                                <button type="submit" class="btn btn-primary me-2">بررسی</button>
                                                
                                            </div>
                                        </form>
                                    </div>
                                    <div class="tab-pane" id="tab2">
                                        @if (!string.IsNullOrEmpty(documentError))
                                        {
                                            <div class="alert alert-danger">@documentError</div>
                                        }
                                        else if (verifyDocData != null)
                                        {
                                            <div class="document-details">
                                                <h4>جزئیات سند</h4>
                                                <p><strong>نوع سند:</strong> @verifyDocData.DocType</p>
                                                <p><strong>موضوع سند:</strong> @verifyDocData.SignSubject</p>
                                                <p><strong>تاریخ سند:</strong> @verifyDocData.DocDate</p>
                                                <p><strong>توضیحات:</strong> @verifyDocData.Desc</p>
                                                @if (!string.IsNullOrEmpty(verifyDocData.DocImage_Base64))
                                                {
                                                    <h5>تصویر سند:</h5>
                                                    <img src="data:image/png;base64,@verifyDocData.DocImage_Base64" alt="تصویر سند" class="img-fluid" />
                                                }
                                                else if (!string.IsNullOrEmpty(verifyDocData.DocImage))
                                                {
                                                    <h5>تصویر سند:</h5>
                                                    <img src="@verifyDocData.DocImage" alt="تصویر سند" class="img-fluid" />
                                                }
                                                @if (verifyDocData.LstFindPersonInQuery != null && verifyDocData.LstFindPersonInQuery.Count > 0)
                                                {
                                                    <h5>افراد مرتبط:</h5>
                                                    <ul>
                                                        @foreach (var person in verifyDocData.LstFindPersonInQuery)
                                                        {
                                                            <li>@person.Name @person.Family (کد ملی: @person.NationalNo)</li>
                                                        }
                                                    </ul>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p>سندی برای نمایش وجود ندارد.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#scrollingmodal').on('hidden.bs.modal', function() {
                $('#needs-validation-form')[0].reset();
                $('.form-text').text('');
                $('.nav-tabs a[href="#tab1"]').tab('show');
            });

        @if (showDocumentTab)
        {
            <text>
                    $('#scrollingmodal').modal('show');
                    $('.nav-tabs a[href="#tab2"]').tab('show');
            </text>
        }
        });
    </script>
}