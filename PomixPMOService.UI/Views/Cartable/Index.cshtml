@using PomixPMOService.UI.Controllers;
@model PomixPMOService.UI.Controllers.PaginatedCartableViewModel
@{
    ViewData["Title"] = "کارتابل";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formModel = ViewBag.FormModel as PomixPMOService.UI.Controllers.CartableFormViewModel ?? new PomixPMOService.UI.Controllers.CartableFormViewModel();
    var verifyDocData = ViewBag.VerifyDocData as dynamic ?? null;
    var showDocumentTab = ViewBag.ShowDocumentTab as bool? ?? false;
    var documentError = ViewBag.DocumentError as string ?? null;
}
<style>
    .iColor {
        color: #6c757d !important; 
    }

</style>
<div class="input-group mb-5">
    <form asp-action="Index" method="get" class="w-100">
        <div class="input-group">
            <input type="text" class="form-control" name="search" value="@Model.SearchQuery" placeholder="جستجو">
            <button type="submit" class="input-group-text btn btn-primary">
                <i class="fa fa-search" aria-hidden="true" style="color: whitesmoke;"></i>
            </button>
        </div>
    </form>
</div>
<div class="card">
    <div class="card-header">
        <h2 class="card-title">درخواست‌ها</h2>
        <button id="AddDoc" type="button" class="btn btn-primary btn-pill left-btn" data-bs-toggle="modal" data-bs-target="#scrollingmodal">سند جدید</button>
    </div>
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        <div class="table-responsive text-center">
            <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="cartableTable" class="table table-bordered text-nowrap border-bottom">
                            <thead>
                                <tr role="row">
                                    <th class="wd-10p border-bottom-0 sorting sorting_asc">شماره درخواست</th>
                                    <th class="wd-15p border-bottom-0 sorting">تاریخ ایجاد</th>
                                    <th class="wd-15p border-bottom-0 sorting">کد ملی</th>
                                    <th class="wd-15p border-bottom-0 sorting">شماره همراه</th>
                                    <th class="wd-15p border-bottom-0 sorting">شناسه سند</th>
                                    <th class="wd-10p border-bottom-0 sorting">رمز تصدیق</th>
                                    <th class="wd-10p border-bottom-0 sorting"> احراز هویت متقاضی </th>
                                    <th class="wd-10p border-bottom-0 sorting">احراز اصالت سند </th>
                                    <th class="wd-10p border-bottom-0 sorting">ارتباط متقاضی با سند </th>
                                    <th class="wd-10p border-bottom-0 sorting">احراز وکالت</th>
                                    <th class="wd-20p border-bottom-0 sorting">توضیحات</th>
                                    <th class="wd-20p border-bottom-0 sorting">تایید</th>
                                </tr>
                            </thead>
                            <tbody id="cartableBody">
                                @foreach (var item in Model.Items)
                                {
                                    var explanation = "";
                                    if (!item.IsMatch.HasValue || !item.IsMatch.Value)
                                    {
                                        explanation += "کد ملی و شماره موبایل تطابق ندارند. ";
                                    }
                                    if (!item.IsExist.HasValue || !item.IsExist.Value)
                                    {
                                        explanation += "سند وجود ندارد. ";
                                    }
                                    if (!item.IsNationalIdInResponse.HasValue || !item.IsNationalIdInResponse.Value)
                                    {
                                        explanation += "کد ملی در سند یافت نشد. ";
                                    }
                                    if (!item.IsNationalIdInLawyers.HasValue || !item.IsNationalIdInLawyers.Value)
                                    {
                                        explanation += "کد ملی در سند یافت نشد. ";
                                    }
                                    if (string.IsNullOrEmpty(explanation))
                                    {
                                        explanation = "بدون مشکل";
                                    }

                                    <tr>
                                        <td>@item.RequestId</td>
                                        <td>
                                            <span class="d-block">@item.CreatedAt.ToPersianTime()</span>
                                            <span class="d-block">@item.CreatedAt.ToPersianDate()</span>
                                        </td>
                                        <td>@item.NationalId</td>
                                        <td>@item.MobileNumber</td>
                                        <td>@item.DocumentNumber</td>
                                        <td>@item.VerificationCode</td>
                                        <!-- احراز هویت متقاضی -->
                                        <td class="text-center">
                                            @if (item.IsMatch.HasValue)
                                            {
                                                if (item.IsMatch.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- احراز اصالت سند -->
                                        <td class="text-center">
                                            @if (item.IsExist.HasValue)
                                            {
                                                if (item.IsExist.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="وجود دارد"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="وجود ندارد"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!--ارتباط متقاضی با سند  -->
                                        <td class="text-center">
                                            @if (item.IsNationalIdInResponse.HasValue)
                                            {
                                                if (item.IsNationalIdInResponse.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- اصالت وکالت -->
                                        <td class="text-center">
                                            @if (item.IsNationalIdInLawyers.HasValue)
                                            {
                                                if (item.IsNationalIdInLawyers.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- توضیحات -->
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-icon btn-light btn-view-doc"
                                                    data-request-id="@item.RequestId"
                                                    title="مشاهده متن سند">
                                                <i class="fa fa-exclamation-circle text-warning"></i>
                                            </button>
                                        </td>


                                        <td class="text-center">
                                            <ul class="nav nav-price justify-content-center mt-2">
                                                <li>
                                                    <a data-bs-toggle="tab" class="approval-tab active show text-success" data-value="true">
                                                        <i class="fa fa-check me-1"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a data-bs-toggle="tab" class="approval-tab text-danger" data-value="false">
                                                        <i class="fa fa-times me-1"></i>
                                                    </a>
                                                </li>
                                            </ul>

                                            <input type="hidden" name="approval-@item.RequestId" id="approvalValue-@item.RequestId" value="true" />
                                        </td>

                                    </tr> 
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-left"></i>
                                <span class="sr-only">قبلی</span>
                            </a>
                        </li>
                        @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchQuery })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages || Model.TotalPages == 0 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-right"></i>
                                <span class="sr-only">بعدی</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="documentModal" tabindex="-1" aria-labelledby="documentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title text-primary" id="documentModalLabel">متن سند</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>

            <div class="modal-body" id="documentModalBody">
                <p class="text-center text-muted">در حال بارگذاری...</p>
            </div>

            <div class="modal-footer justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="documentChecked">
                    <label class="form-check-label" for="documentChecked">متن سند بررسی شد</label>
                </div>

                <div>
                    <button type="button" class="btn btn-success" id="confirmDocument">تایید</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding New Document -->
<div class="modal fade" id="scrollingmodal" tabindex="-1" aria-labelledby="scrollingmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header border-0 position-absolute top-0 end-0 p-3">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="card border-0">
                    <div class="card-body">
                        <div class="panel panel-primary">
                            <div class="tab-menu-heading">
                                <div class="tabs-menu1">
                                    <ul class="nav panel-tabs">
                                        <li><a href="#tab1" data-bs-toggle="tab" class="active">ایجاد سند جدید</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="panel-body tabs-menu-body">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab1">
                                        <form asp-action="ValidateSteps" method="post" class="form-horizontal" id="needs-validation-form">
                                            @Html.AntiForgeryToken()

                                            <!-- Step 1: احراز هویت -->
                                            <div class="form-row mb-4">  
                                                <div class="form-group col-md-12 mb-0">
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-0">
                                                            <label class="form-label">کد ملی </label>
                                                            <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا کد ملی را وارد کنید">
                                                                <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                                    <i class="iColor fa fa-vcard-o" data-bs-toggle="tooltip" title="fa fa-vcard-o"></i>
                                                                </a>
                                                                <input class="input100 border-start-0 ms-0 form-control" name="NationalCode" id="NationalCode" placeholder="کد ملی" required type="text">
                                                                <span class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group col-md-6 mb-0">
                                                            <label class="form-label">شماره موبایل</label>
                                                            <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا شماره موبایل را وارد کنید">
                                                                <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                                    <i class="iColor fa fa-mobile" data-bs-toggle="tooltip" title="fa fa-mobile"></i>
                                                                </a>
                                                                <input class="input100 border-start-0 ms-0 form-control" name="MobileNumber" id="MobileNumber" placeholder="شماره موبایل" required type="text">
                                                                <span class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step1Message) || formModel.Step1Message.Contains("معتبر") ? "success" : "danger")">
                                                        @formModel?.Step1Message
                                                    </span>
                                                </div>
                                            </div>
                                            <!-- Step 2: احراز سند -->
                                            <div class="form-row mb-4">
                                                <div class="form-group col-md-12 mb-0">
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6 mb-0">
                                                            <label class="form-label">شناسه سند</label>
                                                            <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا شناسه سند را وارد کنید">
                                                                <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                                    <i class="iColor fa fa-wpforms" data-bs-toggle="tooltip" title="fa fa-wpforms"></i>
                                                                </a>
                                                                <input class="input100 border-start-0 ms-0 form-control" name="DocumentNumber" id="DocumentNumber" placeholder="شناسه سند" required type="text">
                                                                <span class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="form-group col-md-6 mb-0">
                                                            <label class="form-label">رمز تصدیق </label>
                                                            <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا رمز تصدیق را وارد کنید">
                                                                <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                                                    <i class="iColor fa fa-unlock-alt" data-bs-toggle="tooltip" title="fa fa-unlock-alt"></i>
                                                                </a>
                                                                <input class="input100 border-start-0 ms-0 form-control" name="VerifyCode" id="VerifyCode" placeholder="رمز تصدیق" required type="text">
                                                                <span class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step2Message) || formModel.Step2Message.Contains("معتبر") ? "success" : "danger")">
                                                        @formModel?.Step2Message
                                                    </span>
                                                </div>
                                            </div>
                                            <!-- Buttons -->
                                            <div class="form-footer mt-2 text-end">
                                                <button type="submit" class="btn btn-primary me-2">بررسی</button>
                                                
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#scrollingmodal').on('hidden.bs.modal', function() {
                $('#needs-validation-form')[0].reset();
                $('.form-text').text('');
                $('.nav-tabs a[href="#tab1"]').tab('show');
            });
        });

        $(document).on('click', '.btn-view-doc', function () {
            var requestId = $(this).data('request-id');
            $('#documentModalLabel').text('متن سند درخواست ' + requestId);
            $('#documentModalBody').html('<div class="d-flex justify-content-center align-items-center"><div class="spinner-border" role="status"></div><span class="ms-2">در حال بارگذاری...</span></div>');
            $('#documentChecked').prop('checked', false);
            $('#documentModal').modal('show');

            $.ajax({
                url: '/Cartable/GetDocumentText',
                type: 'GET',
                data: { requestId: requestId },
                dataType: 'json',
                success: function (res) {
                    if (res && res.success && res.documentText && res.documentText.trim() !== "") {
                        var safe = $('<div/>').text(res.documentText).html();
                        $('#documentModalBody').html('<pre style="white-space: pre-wrap; line-height:1.6;">' + safe + '</pre>');
                    }
                    else {
                        $('#documentModalBody').html('<p class="text-danger fw-bold text-center">رمز تصدیق یا شماره سند درست وارد نشده است.</p>');
                    }
                },
                error: function () {
                    $('#documentModalBody').html('<p class="text-danger text-center">خطا در دریافت اطلاعات سند.</p>');
                }
            });
        });

        $(document).on('click', '#confirmDocument', function () {
            if ($('#documentChecked').is(':checked')) {
                Swal.fire({
                    icon: 'success',
                    title: 'تأیید شد ✅',
                    text: 'متن سند بررسی و تأیید گردید.',
                    confirmButtonText: 'باشه',
                    confirmButtonColor: '#198754'
                });
                $('#documentModal').modal('hide');
            } else {
                Swal.fire({
                    icon: 'warning',
                    title: 'توجه ⚠️',
                    text: 'لطفاً ابتدا گزینه "متن سند بررسی شد" را تیک بزنید.',
                    confirmButtonText: 'باشه'
                });
            }
        });

    </script>
}