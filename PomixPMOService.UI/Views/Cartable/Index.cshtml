@section Scripts {
    <script>
        $(document).ready(function () {

            // ==================== 1. ابزارهای کمکی ====================
            $('[data-bs-toggle="tooltip"]').tooltip();

            let pendingReject = null; // برای رد موقت

            // ریست فرم مودال
            $('#scrollingmodal').on('hidden.bs.modal', function () {
                $('#needs-validation-form')[0].reset();
                $('.form-text').text('');
            });

            // ==================== 2. نمایش متن سند ====================
            $(document).on('click', '.btn-view-doc', function () {
                const requestId = $(this).data('request-id');
                const row = $(`tr[data-request-id="${requestId}"]`);

                $('#documentModalLabel').text('متن سند درخواست ' + requestId);
                $('#documentModalBody').html('<div class="d-flex justify-content-center my-5"><div class="spinner-border" role="status"></div><span class="ms-2">در حال بارگذاری...</span></div>');
                $('#documentChecked').prop('checked', false);
                $('#confirmDocument').data('request-id', requestId);
                $('#documentModal').modal('show');

                $.ajax({
                    url: '/Cartable/GetDocumentText',
                    type: 'GET',
                    data: { requestId: requestId },
                    dataType: 'json',
                    success: function (res) {
                        if (res && res.success && res.documentText && res.documentText.trim() !== "") {
                            let text = res.documentText;
                            let safe = $('<div/>').text(text).html();

                            // هایلایت مهلت اعتبار
                            safe = safe.replace(
                                /(مهلت اعتبار این وکالتنامه تا تاریخ\s*\d{4}\/\d{2}\/\d{2}\s*می باشد)/g,
                                '<strong style="color:#d9534f; font-weight:bold;">$1</strong>'
                            );

                            $('#documentModalBody').html('<pre style="white-space: pre-wrap; line-height:1.7; font-size:0.95rem;">' + safe + '</pre>');
                            $('#documentChecked').prop('checked', res.isRead === true);
                        } else {
                            $('#documentModalBody').html('<p class="text-danger fw-bold text-center my-4">رمز تصدیق یا شماره سند درست وارد نشده است.</p>');
                            $('#documentChecked').prop('checked', false);
                            toastr.error(res.message || 'رمز تصدیق یا شماره سند درست وارد نشده است.');
                        }
                    },
                    error: function (xhr) {
                        const msg = xhr.responseJSON?.message || 'خطا در دریافت اطلاعات سند.';
                        $('#documentModalBody').html('<p class="text-danger text-center my-4">' + msg + '</p>');
                        $('#documentChecked').prop('checked', false);
                        toastr.error(msg);
                    }
                });
            });

            // ==================== 3. تیک "سند مشاهده شد" ====================
            $('#confirmDocument').click(function () {
                if (!$('#documentChecked').is(':checked')) {
                    toastr.warning('لطفاً ابتدا گزینه «متن سند بررسی شد» را تیک بزنید.');
                    return;
                }

                const requestId = $(this).data('request-id');
                const row = $(`tr[data-request-id="${requestId}"]`);
                const token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '/Cartable/MarkDocumentAsRead',
                    type: 'POST',
                    data: { requestId: requestId },
                    headers: { 'X-CSRF-TOKEN': token },
                    dataType: 'json',
                    success: function (res) {
                        if (res.success) {
                            toastr.success('سند با موفقیت به عنوان خوانده شده علامت‌گذاری شد ✓');
                            $('#documentModal').modal('hide');

                            // آپدیت آیکون و data
                            row.data('is-read', true);
                            row.find('.btn-view-doc i')
                                .removeClass('text-muted').addClass('text-success')
                                .attr('title', 'سند خوانده شده');
                        } else {
                            toastr.error(res.message || 'خطا در ثبت خواندن سند.');
                        }
                    },
                    error: function () {
                        toastr.error('خطا در ارتباط با سرور.');
                    }
                });
            });

            // ==================== 4. تغییر رادیو (تأیید / رد) ====================
            $(document).on('change', '.approval-radio', function () {
                const radio = $(this);
                const requestId = radio.data('request-id');
                const isApprove = radio.attr('id').startsWith('approve');

                if (isApprove) {
                    // تأیید فوری — فقط بفرست، سرور چک می‌کنه
                    submitValidation(requestId, true, null);
                } else {
                    // رد → باز کردن مودال
                    pendingReject = { radio, requestId };
                    $('#rejectRequestId').val(requestId);
                    $('#predefinedReason').val('');
                    $('#customDescription').val('');
                    $('#rejectModal').modal('show');
                    radio.prop('checked', false); // منتظر تأیید کاربر
                }
            });

            // ==================== 5. تأیید رد در مودال ====================
            $('#confirmReject').click(function () {
                if (!pendingReject) return;

                let description = '';
                const reason = $('#predefinedReason option:selected').text().trim();
                const custom = $('#customDescription').val()?.trim();

                if (reason && reason !== "-- انتخاب کنید --") description += reason;
                if (custom) {
                    if (description) description += " - ";
                    description += custom;
                }

                // حتی اگه خالی باشه بفرست — سرور می‌گه خطاست
                submitValidation(pendingReject.requestId, false, description || null);
                $('#rejectModal').modal('hide');
                pendingReject.radio.prop('checked', true);
                pendingReject = null;
            });

            // ==================== 6. لغو انتخاب با کلیک روی لیبل انتخاب‌شده ====================
            $(document).on('click', '.btn-group .btn-check:checked + label', function () {
                const label = $(this);
                const radioId = label.attr('for');
                const radio = $('#' + radioId);
                const requestId = radio.data('request-id');

                radio.prop('checked', false);
                submitValidation(requestId, null, null); // وضعیت خنثی
            });

            // ==================== 7. تابع اصلی ارسال (بدون هیچ چک منطقی!) ====================
            function submitValidation(requestId, validateByExpert, description) {
                const row = $(`tr[data-request-id="${requestId}"]`);
                const token = $('input[name="__RequestVerificationToken"]').val();

                fetch('/Cartable/UpdateValidationStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        RequestId: requestId,
                        ValidateByExpert: validateByExpert,
                        Description: description
                    })
                })
                .then(res => {
                    if (!res.ok) {
                        return res.json().then(err => { throw err; });
                    }
                    return res.json();
                })
                .then(data => {
                    if (data.success) {
                        toastr.success(data.message || "وضعیت با موفقیت به‌روز شد");

                        // آپدیت رادیوها
                        if (validateByExpert === true) {
                            row.find(`#approve-${requestId}`).prop('checked', true);
                            row.find(`#reject-${requestId}`).prop('checked', false);
                            row.find('.reject-reason').hide().text('');
                        } else if (validateByExpert === false) {
                            row.find(`#approve-${requestId}`).prop('checked', false);
                            row.find(`#reject-${requestId}`).prop('checked', true);
                            if (description) {
                                row.find('.reject-reason').text(description).show();
                            }
                        } else {
                            row.find(`.approval-radio`).prop('checked', false);
                            row.find('.reject-reason').hide().text('');
                        }
                    } else {
                        // فقط پیام سرور رو نشون بده
                        toastr.error(data.message || "خطا در به‌روزرسانی وضعیت");
                        row.find(`.approval-radio`).prop('checked', false);
                    }
                })
                .catch(err => {
                    toastr.error(err.message || "خطا در ارتباط با سرور");
                    row.find(`.approval-radio`).prop('checked', false);
                });
            }

            // ==================== 8. لغو مودال رد (اگر تأیید نکرد) ====================
            $('#rejectModal').on('hidden.bs.modal', function () {
                if (pendingReject) {
                    pendingReject.radio.prop('checked', false);
                    pendingReject = null;
                }
            });

            // ==================== 9. فرم ارسال درخواست جدید ====================
            $('#needs-validation-form').on('submit', function (e) {
                e.preventDefault();
                const form = $(this);
                const btn = $('#btnVerify');

                if (!this.checkValidity()) {
                    e.stopPropagation();
                    form.addClass('was-validated');
                    toastr.error('لطفاً فیلدهای الزامی را پر کنید.');
                    return;
                }

                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm me-2"></span>در حال ارسال...');

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function () {
                        toastr.success('درخواست با موفقیت ارسال شد');
                        $('#scrollingmodal').modal('hide');
                        $('#cartableBody').load(location.href + ' #cartableBody > *');
                    },
                    error: function () {
                        toastr.error('خطا در ارسال درخواست');
                    },
                    complete: function () {
                        btn.prop('disabled', false).html('بررسی و ارسال');
                    }
                });
            });

        });
    </script>
}