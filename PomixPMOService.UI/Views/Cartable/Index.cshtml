@using PomixPMOService.UI.Controllers
@model PomixPMOService.UI.Controllers.PaginatedCartableViewModel
@{
    ViewData["Title"] = "کارتابل";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formModel = ViewBag.FormModel as PomixPMOService.UI.Controllers.CartableFormViewModel ?? new PomixPMOService.UI.Controllers.CartableFormViewModel();
    var verifyDocData = ViewBag.VerifyDocData as dynamic ?? null;
    var showDocumentTab = ViewBag.ShowDocumentTab as bool? ?? false;
    var documentError = ViewBag.DocumentError as string ?? null;
}
<link rel="stylesheet" href="~/css/IndexStyle.css" asp-append-version="true" />

<div class="input-group mb-5">
    <form asp-action="Index" method="get" class="w-100">
        @{
            var currentSearch = Context.Request.Query["search"].ToString();
            var currentFilter = ViewBag.FilterStatus as string ?? "";
        }
        <div class="input-group mb-3">
            <form asp-action="Index" method="get" class="w-100 d-flex align-items-center">
                <input type="text" class="form-control" name="search" value="@currentSearch" placeholder="جستجو..." />

                <select name="filterStatus" class="form-select mx-2" style="max-width:200px; font-size:13px;">
                    <option value="" selected="@string.IsNullOrEmpty(currentFilter)">همه درخواست‌ها</option>
                    <option value="approved" selected="@(currentFilter == "approved")">تایید شده</option>
                    <option value="rejected" selected="@(currentFilter == "rejected")">رد شده</option>
                    <option value="pending" selected="@(currentFilter == "pending")">در انتظار بررسی</option>
                </select>

                <button type="submit" class="btn btn-primary">
                <i class="fa fa-search" aria-hidden="true" style="color: whitesmoke;"></i>
                </button>
            </form>
        </div>

    </form>
</div>
<div class="card">
    <div class="card-header">
        <h2 class="card-title">درخواست‌ها</h2>
        <button id="AddDoc" type="button" class="btn btn-primary btn-pill left-btn" data-bs-toggle="modal" data-bs-target="#scrollingmodal">سند جدید</button>
    </div>
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <script>
                toastr.error('@ViewBag.ErrorMessage');
            </script>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <script>
                toastr.success('@ViewBag.SuccessMessage');
            </script>
        }
        <div class="table-responsive text-center">
            <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="cartableTable" class="table table-bordered text-nowrap border-bottom">
                            <thead>
                                <tr role="row">
                                    <th class="wd-10p border-bottom-0 sorting sorting_asc">شماره درخواست</th>
                                    <th class="wd-15p border-bottom-0 sorting">تاریخ ایجاد</th>
                                    <th class="wd-15p border-bottom-0 sorting">کد ملی</th>
                                    <th class="wd-15p border-bottom-0 sorting">شماره همراه</th>
                                    <th class="wd-15p border-bottom-0 sorting">شناسه سند</th>
                                    <th class="wd-10p border-bottom-0 sorting">رمز تصدیق</th>
                                    <th class="wd-10p border-bottom-0 sorting"> احراز هویت متقاضی </th>
                                    <th class="wd-10p border-bottom-0 sorting">احراز اصالت سند </th>
                                    <th class="wd-10p border-bottom-0 sorting">ارتباط متقاضی با سند </th>
                                    <th class="wd-10p border-bottom-0 sorting">احراز وکالت</th>
                                    <th class="wd-20p border-bottom-0 sorting">نمایش سند</th>
                                    <th class="wd-20p border-bottom-0 sorting">تایید درخواست</th>
                                </tr>
                            </thead>
                            <tbody id="cartableBody">
                                @foreach (var item in Model.Items)
                                {
                                    var explanation = "";
                                    if (!item.IsMatch.HasValue || !item.IsMatch.Value)
                                    {
                                        explanation += "کد ملی و شماره موبایل تطابق ندارند. ";
                                    }
                                    if (!item.IsExist.HasValue || !item.IsExist.Value)
                                    {
                                        explanation += "سند وجود ندارد. ";
                                    }
                                    if (!item.IsNationalIdInResponse.HasValue || !item.IsNationalIdInResponse.Value)
                                    {
                                        explanation += "کد ملی در سند یافت نشد. ";
                                    }
                                    if (!item.IsNationalIdInLawyers.HasValue || !item.IsNationalIdInLawyers.Value)
                                    {
                                        explanation += "کد ملی در سند یافت نشد. ";
                                    }
                                    if (string.IsNullOrEmpty(explanation))
                                    {
                                        explanation = "بدون مشکل";
                                    }

                                    <tr data-request-id="@item.RequestId">
                                        <td>@item.RequestId</td>
                                        <td class="px-4 py-3">
                                            <span class="block">@item.CreatedAt.ToPersianTime()</span>
                                            <span class="block text-sm text-muted">@item.CreatedAt.ToPersianDate()</span>
                                        </td>
                                        <td>@item.NationalId</td>
                                        <td>@item.MobileNumber</td>
                                        <td>@item.DocumentNumber</td>
                                        <td>@item.VerificationCode</td>
                                        <!-- احراز هویت متقاضی -->
                                        <td class="text-center">
                                            @if (item.IsMatch.HasValue)
                                            {
                                                if (item.IsMatch.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- احراز اصالت سند -->
                                        <td class="text-center">
                                            @if (item.IsExist.HasValue)
                                            {
                                                if (item.IsExist.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="وجود دارد"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="وجود ندارد"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!--ارتباط متقاضی با سند  -->
                                        <td class="text-center">
                                            @if (item.IsNationalIdInResponse.HasValue)
                                            {
                                                if (item.IsNationalIdInResponse.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- اصالت وکالت -->
                                        <td class="text-center">
                                            @if (item.IsNationalIdInLawyers.HasValue)
                                            {
                                                if (item.IsNationalIdInLawyers.Value)
                                                {
                                                    <i class="fa fa-check text-success" data-bs-toggle="tooltip" title="تایید شده"></i>
                                                }
                                                else
                                                {
                                                    <i class="zmdi zmdi-close text-danger" data-bs-toggle="tooltip" title="تایید نشده"></i>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <!-- متن سند -->
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-icon btn-light btn-view-doc"
                                                    data-request-id="@item.RequestId"
                                                    title="مشاهده متن سند">
                                                <i class="typcn typcn-document-text"
                                                   style="color:@(item.IsRead ? "green" : "blue");"
                                                   data-bs-toggle="tooltip"
                                                   title="@(item.IsRead ? "خوانده شده" : "خوانده نشده")">
                                                </i>
                                            </button>
                                        </td>
                                        <!-- تایید -->
                                        <td class="text-center" style="width:120px;">
                                            <div class="btn-group btn-group-sm radiobtns" role="group" aria-label="Approval radio toggle button group" style="border-radius: 3px;">
                                                <input type="radio" class="btn-check approval-radio" name="approval-@item.RequestId" id="approve-@item.RequestId" data-request-id="@item.RequestId" data-value="true"
                                                @(item.ValidateByExpert.HasValue && item.ValidateByExpert.Value ? "checked" : "")>
                                                <label class="btn btn-outline-success" for="approve-@item.RequestId">
                                                تایید                                                  
                                                </label>
                                                <input type="radio" class="btn-check approval-radio" name="approval-@item.RequestId" id="reject-@item.RequestId" data-request-id="@item.RequestId" data-value="false"
                                                @(item.ValidateByExpert.HasValue && !item.ValidateByExpert.Value ? "checked" : "")>
                                                <label class="btn btn-outline-danger br-0" for="reject-@item.RequestId">
                                                عدم تایید 
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-left"></i>
                                <span class="sr-only">قبلی</span>
                            </a>
                        </li>
                        @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchQuery })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages || Model.TotalPages == 0 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-right"></i>
                                <span class="sr-only">بعدی</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Modal نمایش سند -->
<div class="modal fade" id="documentModal" tabindex="-1" aria-labelledby="documentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title text-primary" id="documentModalLabel">متن سند</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>
            <div class="modal-body" id="documentModalBody">
                <p class="text-center text-muted">در حال بارگذاری...</p>
            </div>
            <div class="modal-footer justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="documentChecked">
                    <label class="form-check-label" for="documentChecked">متن سند بررسی شد</label>
                </div>
                <div>
                    <button type="button" class="btn btn-success" id="confirmDocument">تایید</button>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal رد درخواست -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-lg modal-dialog-centered" style="max-width:450px;">
        <div class="modal-content shadow-lg border-0 rounded-4">
            <div class="modal-header rounded-top-4">
                <h5 class="modal-title d-flex align-items-center gap-2" id="rejectModalLabel">
                     رد درخواست
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
            </div>

            <div class="modal-body p-4">
                <form id="rejectForm">
                    <input type="hidden" id="rejectRequestId" />

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="fa fa-exclamation-circle text-warning me-1"></i>
                            علت عدم تأیید درخواست:
                        </label>
                        <select class="form-select rounded-3 shadow-sm" style="font-size:13px;" id="predefinedReason" asp-items="@ViewBag.RejectReasons">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fa fa-comment-dots text-secondary me-1"></i>
                            توضیحات تکمیلی (اختیاری):
                        </label>
                        <textarea class="form-control rounded-3 shadow-sm"
                                  id="customDescription" rows="3"
                                  placeholder="مثال: تاریخ انقضا وکالتنامه: ۱۴۰۳/۰۵/۱۰"></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer pb-3 text-start">
                <button type="button" class="btn btn-primary" id="confirmReject">
                     تأیید
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Modal for Adding New Document -->
<div class="modal fade" id="scrollingmodal" tabindex="-1" aria-labelledby="scrollingmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable custom-modal">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-semibold text-black">ایجاد سند جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4 px-5">
                <form asp-action="ValidateSteps" method="post" id="needs-validation-form">
                    @Html.AntiForgeryToken()
                    <!-- Step 1 -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="form-floating modern-input">
                                <input type="text" class="form-control" id="NationalCode" name="NationalCode" placeholder="کد ملی" required />
                                <label for="NationalCode"><i class="fa fa-vcard-o me-2 text-muted"></i> کد ملی</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating modern-input">
                                <input type="text" class="form-control" id="MobileNumber" name="MobileNumber" placeholder="شماره موبایل" required />
                                <label for="MobileNumber"><i class="fa fa-mobile me-2 text-muted"></i> شماره موبایل</label>
                            </div>
                        </div>
                    </div>
                    <span class="small d-block mb-3 text-@(string.IsNullOrEmpty(formModel?.Step1Message) || formModel.Step1Message.Contains("معتبر") ? "success" : "danger")">
                        @formModel?.Step1Message
                    </span>
                    <!-- Step 2 -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="form-floating modern-input">
                                <input type="text" class="form-control" id="DocumentNumber" name="DocumentNumber" placeholder="شناسه سند" required />
                                <label for="DocumentNumber"><i class="fa fa-wpforms me-2 text-muted"></i> شناسه سند</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating modern-input">
                                <input type="text" class="form-control" id="VerifyCode" name="VerifyCode" placeholder="رمز تصدیق" required />
                                <label for="VerifyCode"><i class="fa fa-unlock-alt me-2 text-muted"></i> رمز تصدیق</label>
                            </div>
                        </div>
                    </div>
                    <span class="small d-block mb-3 text-@(string.IsNullOrEmpty(formModel?.Step2Message) || formModel.Step2Message.Contains("معتبر") ? "success" : "danger")">
                        @formModel?.Step2Message
                    </span>
                    <div class="text-end mt-3">
                        <button type="submit" id="btnVerify" class="btn btn-primary px-4 py-2">بررسی</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Reset modal form on close
            $('#scrollingmodal').on('hidden.bs.modal', function() {
                $('#needs-validation-form')[0].reset();
                $('.form-text').text('');
            });

            // متغیر برای ذخیره درخواست در حال رد
            let pendingReject = null;

            // --- 1. View document text ---
            $(document).on('click', '.btn-view-doc', function () {
                const requestId = $(this).data('request-id');
                $('#documentModalLabel').text('متن سند درخواست ' + requestId);
                $('#documentModalBody').html('<div class="d-flex justify-content-center align-items-center"><div class="spinner-border" role="status"></div><span class="ms-2">در حال بارگذاری...</span></div>');
                $('#documentChecked').prop('checked', false);
                $('#confirmDocument').data('request-id', requestId);
                $('#documentModal').modal('show');

                $.ajax({
                    url: '/Cartable/GetDocumentText',
                    type: 'GET',
                    data: { requestId: requestId },
                    dataType: 'json',
                    success: function (res) {
                        if (res && res.success && res.documentText && res.documentText.trim() !== "") {
                            let text = res.documentText;
                            let safe = $('<div/>').text(text).html();

                            safe = safe.replace(
                                /(مهلت اعتبار این وکالتنامه تا تاریخ\s*\d{4}\/\d{2}\/\d{2}\s*می باشد)/g,
                                '<strong style="color:#d9534f; font-weight:bold;">$1</strong>'
                            );

                            $('#documentModalBody').html('<pre style="white-space: pre-wrap; line-height:1.6;">' + safe + '</pre>');
                            $('#documentChecked').prop('checked', res.isRead === true);
                        } else {
                            $('#documentModalBody').html('<p class="text-danger fw-bold text-center">رمز تصدیق یا شماره سند درست وارد نشده است.</p>');
                            $('#documentChecked').prop('checked', false);
                            toastr.error(res.message || 'رمز تصدیق یا شماره سند درست وارد نشده است.');
                        }
                    },
                    error: function (xhr) {
                        const errorMessage = xhr.responseJSON?.message || 'خطا در دریافت اطلاعات سند.';
                        $('#documentModalBody').html('<p class="text-danger text-center">' + errorMessage + '</p>');
                        $('#documentChecked').prop('checked', false);
                        toastr.error(errorMessage);
                    }
                });
            });

            // --- 2. Confirm document ---
            $('#confirmDocument').click(function() {
                if ($('#documentChecked').is(':checked')) {
                    const requestId = $(this).data('request-id');
                    $.ajax({
                        url: '/Cartable/MarkDocumentAsRead',
                        type: 'POST',
                        data: { requestId: requestId },
                        dataType: 'json',
                        headers: {
                            'X-CSRF-TOKEN': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(res) {
                            if (res.success) {
                                toastr.success(res.message || 'سند با موفقیت به عنوان خوانده شده علامت‌گذاری شد.');
                                $('#documentModal').modal('hide');
                                const row = $('tr[data-request-id="' + requestId + '"]');
                                row.find('.btn-view-doc i.typcn-document-text')
                                    .css('color', 'green')
                                    .attr('title', 'خوانده شده');
                            } else {
                                toastr.error(res.message || 'خطا در علامت‌گذاری سند.');
                            }
                        },
                        error: function(xhr) {
                            const errorMessage = xhr.responseJSON?.message || 'خطا در ارتباط با سرور.';
                            toastr.error(errorMessage);
                        }
                    });
                } else {
                    toastr.warning('لطفاً ابتدا گزینه "متن سند بررسی شد" را تیک بزنید.');
                }
            });

            // --- 3. Approval radio change (فقط برای تأیید فوری) ---
            $(document).on('change', '.approval-radio', function () {
                const radio = $(this);
                const requestId = radio.data('request-id');
                const isApprove = radio.attr('id').startsWith('approve');

                if (!isApprove) {
                    // عدم تأیید → مودال
                    pendingReject = { radio, requestId };
                    $('#rejectRequestId').val(requestId);
                    $('#predefinedReason').val('');
                    $('#customDescription').val('');
                    $('#rejectModal').modal('show');
                    radio.prop('checked', false);
                    return;
                }

                // تأیید → فوری
                submitValidation(requestId, true, null);
            });

            // --- 4. تأیید نهایی رد در مودال ---
            $('#confirmReject').click(function() {
                if (!pendingReject) return;

                const reasonText = $('#predefinedReason option:selected').text().trim();
                const custom = $('#customDescription').val()?.trim() || '';
                let description = '';

                if (reasonText && reasonText !== "-- انتخاب کنید --") {
                    description += reasonText;
                }

                if (custom) {
                    if (description) description += " - ";
                    description += custom;
                }

                if (!description) {
                    toastr.warning('لطفاً حداقل یک دلیل انتخاب کنید یا توضیح بنویسید.');
                    return;
                }

                submitValidation(pendingReject.requestId, false, description);
                $('#rejectModal').modal('hide');
                pendingReject.radio.prop('checked', true);
                pendingReject = null;
            });

            // --- 5. کلیک روی برچسب انتخاب‌شده → لغو ---
            $(document).on('click', '.btn-group .btn-check:checked + label', function () {
                const label = $(this);
                const radio = $('#' + label.attr('for'));
                const requestId = radio.data('request-id');

                radio.prop('checked', false);
                submitValidation(requestId, null, null);
            });

            // --- 6. تابع ارسال (واحد) ---
            function submitValidation(requestId, validateByExpert, description) {
                const token = $('input[name="__RequestVerificationToken"]').val();

                fetch('/Cartable/UpdateValidationStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        RequestId: requestId,
                        ValidateByExpert: validateByExpert,
                        Description: description
                    })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        toastr.success(data.message || "وضعیت با موفقیت به‌روز شد");
                        const row = $(`tr[data-request-id="${requestId}"]`);
                        if (validateByExpert === true) {
                            row.find(`#approve-${requestId}`).prop('checked', true);
                            row.find(`#reject-${requestId}`).prop('checked', false);
                        } else if (validateByExpert === false) {
                            row.find(`#approve-${requestId}`).prop('checked', false);
                            row.find(`#reject-${requestId}`).prop('checked', true);
                        } else {
                            row.find(`.approval-radio`).prop('checked', false);
                        }
                    } else {
                        toastr.error(data.message || 'خطا در به‌روزرسانی.');
                        $(`tr[data-request-id="${requestId}"] .approval-radio`).prop('checked', false);
                    }
                })
                .catch(err => {
                    console.error(err);
                    toastr.error("خطا در ارتباط با سرور");
                    $(`tr[data-request-id="${requestId}"] .approval-radio`).prop('checked', false);
                });
            }

            // --- 7. لغو مودال ---
            $('#rejectModal').on('hidden.bs.modal', function() {
                if (pendingReject) {
                    pendingReject.radio.prop('checked', false);
                    pendingReject = null;
                }
            });

            // --- 8. Form validation ---
            $('#needs-validation-form').on('submit', function(e) {
                e.preventDefault();
                const form = $(this);
                const btn = $('#btnVerify');

                if (!this.checkValidity()) {
                    e.stopPropagation();
                    form.addClass('was-validated');
                    toastr.error('لطفاً فیلدهای مورد نیاز را درست پر کنید.');
                    return;
                }

                btn.prop('disabled', true)
                   .html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>در حال بررسی...');

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function(res) {
                        toastr.success('درخواست با موفقیت ارسال شد');
                        $('#scrollingmodal').modal('hide');
                        $('#cartableBody').load(window.location.href + ' #cartableBody > *');
                    },
                    error: function() {
                        toastr.error('خطا در ارسال درخواست ');
                    },
                    complete: function() {
                        btn.prop('disabled', false).html('بررسی');
                    }
                });
            });

        });
    </script>
}
