@model PomixPMOService.UI.Controllers.PaginatedCartableViewModel
@{
    ViewData["Title"] = "کارتابل";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formModel = ViewBag.FormModel as PomixPMOService.UI.Controllers.CartableFormViewModel ?? new PomixPMOService.UI.Controllers.CartableFormViewModel();
}

<div class="input-group mb-5">
    <form asp-action="Index" method="get" class="w-100">
        <div class="input-group">
            <input type="text" class="form-control" name="search" value="@Model.SearchQuery" placeholder="جستجو">
            <button type="submit" class="input-group-text btn btn-primary">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </div>
    </form>
</div>
<div class="card">
    <div class="card-header">
        <h2 class="card-title">درخواست‌ها</h2>
        <button id="AddDoc" type="button" class="btn btn-primary btn-pill left-btn" data-bs-toggle="modal" data-bs-target="#scrollingmodal">سند جدید</button>
    </div>
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        <div class="table-responsive">
            <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="cartableTable" class="table table-bordered text-nowrap border-bottom">
                            <thead>
                                <tr role="row">
                                    <th class="wd-15p border-bottom-0 sorting sorting_asc">شماره درخواست</th>
                                    <th class="wd-15p border-bottom-0 sorting">کد ملی</th>
                                    <th class="wd-20p border-bottom-0 sorting">شماره همراه</th>
                                    <th class="wd-15p border-bottom-0 sorting">شناسه سند</th>
                                    <th class="wd-10p border-bottom-0 sorting">رمز تصدیق</th>
                                    <th class="wd-10p border-bottom-0 sorting">وضعیت احراز هویت</th>
                                    <th class="wd-10p border-bottom-0 sorting">وجود سند</th>
                                    <th class="wd-15p border-bottom-0 sorting">بررسی سند</th>
                                </tr>
                            </thead>
                            <tbody id="cartableBody">
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.RequestId</td>
                                        <td>@item.NationalId</td>
                                        <td>@item.MobileNumber</td>
                                        <td>@item.DocumentNumber</td>
                                        <td>@item.VerificationCode</td>
                                        <td>@(item.IsMatch.HasValue ? (item.IsMatch.Value ? "تایید شده" : "تایید نشده") : "نامشخص")</td>
                                        <td>@(item.IsExist.HasValue ? (item.IsExist.Value ? "وجود دارد" : "وجود ندارد") : "نامشخص")</td>
                                        <td>@(item.IsNationalIdInResponse.HasValue ? (item.IsNationalIdInResponse.Value ? "تایید شده" : "تایید نشده") : "نامشخص")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- صفحه‌بندی -->
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-right"></i>
                                <span class="sr-only">قبلی</span>
                            </a>
                        </li>
                        @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchQuery })">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages || Model.TotalPages == 0 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, search = Model.SearchQuery })">
                                <i class="fa fa-angle-left"></i>
                                <span class="sr-only">بعدی</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding New Document -->
<div class="modal fade" id="scrollingmodal" tabindex="-1" aria-labelledby="scrollingmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <div class="panel panel-primary">
                            <div class="tab-menu-heading">
                                <div class="tabs-menu1">
                                    <ul class="nav panel-tabs">
                                        <li><a href="#tab1" data-bs-toggle="tab" class="active">ایجاد سند جدید</a></li>
                                        <li><a href="#tab2" data-bs-toggle="tab" class="disabled">نمایش سند</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="panel-body tabs-menu-body">
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab1">
                                        <form asp-action="ValidateSteps" method="post" class="form-horizontal" id="needs-validation-form">
                                            @Html.AntiForgeryToken()
                                            <!-- Step 1: احراز هویت -->
                                            <div class="row mb-4">
                                                <label class="col-md-3 form-label">احراز هویت:</label>
                                                <div class="col-md-9">
                                                    <div class="row">
                                                        <div class="col-md-6 mb-2 mb-md-0">
                                                            <input class="form-control" asp-for="@formModel.NationalCode" placeholder="کد ملی" required type="text" autocomplete="username">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <input class="form-control" asp-for="@formModel.MobileNumber" placeholder="شماره موبایل" required type="text" autocomplete="username">
                                                        </div>
                                                    </div>
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step1Message) || formModel.Step1Message.Contains("معتبر") ? "success" : "danger")">@formModel?.Step1Message</span>
                                                </div>
                                            </div>
                                            <!-- Step 2: احراز سند -->
                                            <div class="row mb-4">
                                                <label class="col-md-3 form-label">احراز سند:</label>
                                                <div class="col-md-9">
                                                    <div class="row">
                                                        <div class="col-md-6 mb-2 mb-md-0">
                                                            <input class="form-control" asp-for="@formModel.VerifyCode" placeholder="رمز تصدیق" required type="text">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <input class="form-control" asp-for="@formModel.DocumentNumber" placeholder="شناسه سند" required type="text">
                                                        </div>
                                                    </div>
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step2Message) || formModel.Step2Message.Contains("معتبر") ? "success" : "danger")">@formModel?.Step2Message</span>
                                                </div>
                                            </div>
                                            <!-- Step 3: تطابق کد ملی -->
                                            <div class="row mb-4">
                                                <label class="col-md-3 form-label">تطابق کد ملی:</label>
                                                <div class="col-md-9">
                                                    <input class="form-control" asp-for="@formModel.ClientNationalCode" placeholder="کد ملی موکل" required type="text">
                                                    <span class="form-text text-@(string.IsNullOrEmpty(formModel?.Step3Message) || formModel.Step3Message.Contains("معتبر") ? "success" : "danger")">@formModel?.Step3Message</span>
                                                </div>
                                            </div>
                                            <!-- Checkbox -->
                                            <div class="mb-4 row justify-content-end">
                                                <div class="col-md-9">
                                                    <label class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" asp-for="@formModel.AgreeToTerms" required>
                                                        <span class="custom-control-label">با شرایط موافق هستم</span>
                                                    </label>
                                                </div>
                                            </div>
                                            <!-- Buttons -->
                                            <div class="modal-footer">
                                                <div class="col-md-9">
                                                    <button type="submit" class="btn btn-primary me-5">بررسی</button>
                                                </div>
                                                <button type="submit" formaction="@Url.Action("SubmitRequest")" class="btn btn-azure">ثبت</button>
                                                <button type="button" class="btn btn-default" data-bs-dismiss="modal">انصراف</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="tab-pane" id="tab2">
                                        @* محتوای سند *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // فقط برای ریست فرم هنگام بسته شدن مودال
        $(document).ready(function() {
            $('#scrollingmodal').on('hidden.bs.modal', function() {
                $('#needs-validation-form')[0].reset();
                $('.form-text').text('');
            });
        });
    </script>
}