@model PomixPMOService.UI.ViewModels.LoginViewModel
@using DNTCaptcha.Core
@{
    ViewData["Title"] = "ورود به سامانه";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<style>  
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .row.w-100 {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
    }

    .login-right {
        flex: 0 0 450px;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease;
    }

        .login-right:hover {
            transform: translateY(-5px);
        }

    .btn-primary {
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        font-weight: 500;
        color: #fff;
        transition: background 0.3s ease;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 8px;
        height: 45px;
        padding: 10px;
    }

    .text-muted {
        color: #666;
        font-size: 0.9rem;
    }

    #securitySection {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

</style>

<div class="login-container">
    <div class="row w-100" style="max-width: 400px;">
        <div class="login-right">
            <h3 class="text-center pb-3">سامانه استعلام سند</h3>
            <form id="loginForm" asp-action="LoginPage" method="post" class="login100-form validate-form" autocomplete="off">
                <!-- Username Input -->
                <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا نام کاربری را وارد کنید">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-account text-muted" aria-hidden="true"></i>
                    </a>
                    <input asp-for="Username" class="input100 border-start-0 form-control ms-0" placeholder="نام کاربری" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا رمز عبور را وارد کنید" id="Password-toggle">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-eye" aria-hidden="true"></i>
                    </a>
                    <input asp-for="Password" type="password" class="input100 border-start-0 form-control ms-0" placeholder="کلمه عبور" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Two-Factor Authentication Type -->
                <div class="wrap-input100 validate-input input-group" data-bs-validate="لطفا نوع احراز هویت را انتخاب کنید">
                    <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                        <i class="zmdi zmdi-key text-muted" aria-hidden="true"></i>
                    </a>
                    <select class="input100 border-start-0 form-control ms-0" id="methodSelect" required>
                        <option value="security" selected>کد امنیتی</option>
                        <option value="sms">پیامک</option>
                    </select>
                </div>

                <!-- Google Authenticator Section -->
                <div id="securitySection" class="form-group text-start mt-2">
                    <dnt-captcha asp-captcha-generator-max="9999"
                                 asp-captcha-generator-min="1000"
                                 asp-captcha-generator-language="English"
                                 asp-captcha-generator-display-mode="ShowDigits"
                                 asp-use-relative-urls="true"
                                 asp-placeholder="کد امنیتی را وارد کنید"
                                 asp-validation-error-message=" "
                                 asp-too-many-requests-error-message="تعداد درخواست ها زیاد است، لطفا چند لحظه صبر کنید!"
                                 asp-font-name="Tahoma"
                                 asp-font-size="30"
                                 asp-fore-color="#3333333"
                                 asp-back-color="#FCF6F5FF"
                                 asp-text-box-class="form-control captchaInput"
                                 asp-text-box-template="<div class='form-group'>{0}</div>"
                                 asp-validation-message-class="text-danger"
                                 asp-refresh-button-class="icon icon-refresh btn"
                                 asp-show-refresh-button="true" />
                </div>

                <!-- SMS Section -->
                <div id="smsSection" class="form-group" style="display: none; display: flex; align-items: center; gap: 6px;">
                    <input type="text" class="form-control" placeholder="کد ارسال شده را وارد کنید">
                    <button type="button" id="verifyCodeBtn">تایید</button>
                </div>


                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary mb-1">ورود</button>
                </div>

                <!-- Error Message -->
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="text-danger text-center mt-2">@ViewBag.ErrorMessage</div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        @if (TempData["SuccessLogoutMessage"] != null)
        {
            @:toastr.options = {
            @:"closeButton": true,
            @:"progressBar": true,
            @:"positionClass": "toast-top-center", // Optional: Change position for login page
            @:"timeOut": "3000" // Shorter duration for success message
            @:};
            @:toastr.success('@TempData["SuccessLogoutMessage"]');
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var select = document.getElementById('methodSelect');
            var securitySection = document.getElementById('securitySection');
            var smsSection = document.getElementById('smsSection');

            function toggleSections() {
                if (select.value === 'sms') {
                    smsSection.style.display = 'block';
                    securitySection.style.display = 'none';
                } else {
                    smsSection.style.display = 'none';
                    securitySection.style.display = 'block';
                }
            }

            select.addEventListener('change', toggleSections);
            toggleSections();


        });

        const jwtToken = '@ViewBag.JwtToken';
        if (jwtToken) {
            try {
                localStorage.setItem('jwtToken', jwtToken);
                console.log('Token stored:', jwtToken);
                console.log('Redirecting to /Cartable/Index...');
                setTimeout(() => {
                    window.location.href = '/Cartable/Index';
                }, 1000);
            } catch (error) {
                console.error('Error in login script:', error);
                alert('خطا در اجرای اسکریپت لاگین: ' + error.message);
            }
        }
    </script>
}